        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing_tiny"
        android:src="@drawable/ic_action_navigation_more_vert" />

</RelativeLayout>